<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
    <name>com_manifest2md</name>
    <creationDate>2017-05-01</creationDate>
    <copyright>2017 elecoest</copyright>
    <license>GNU General Public License version 2 ou version ult√©rieure ; Voir LICENSE.txt</license>
    <author>Emmanuel Lecoester</author>
    <authorEmail>elecoest@gmail.com</authorEmail>
    <authorUrl>https://www.allevents3.com</authorUrl>
    <version>CVS: 1.0.0</version>
    <description>Joomla Manifest To MarkDown</description>
    
    
    
    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <update> <!-- Runs on update -->
        <sql>
            <file driver="mysql" charset="utf8">sql/update.mysql.utf8.sql</file>
        </sql>
    </update>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <files folder="site">
        <filename>index.html</filename>
        <filename>manifest2md.php</filename>
        <filename>controller.php</filename>
        <filename>router.php</filename>
        <folder>views</folder>
        <folder>models</folder>
        <folder>controllers</folder>
        <folder>helpers</folder>
    </files>
    <media destination="com_manifest2md" folder="media">
        <folder>js</folder>
        <folder>css</folder>
    </media>
    <languages folder="languages/site">
        
			<language tag="en-GB">en-GB/en-GB.com_manifest2md.ini</language>
    </languages>
    <administration>
        <menu img="media/com_manifest2md/images/s_com_manifest2md.png" >COM_MANIFEST2MD</menu>
        <submenu>
            
			<menu link="option=com_manifest2md&amp;view=extensions" view="extensions" img="media/com_manifest2md/images/s_extensions.png" alt="Manifest2md/Extensions">COM_MANIFEST2MD_TITLE_EXTENSIONS</menu>

			<menu link="option=com_categories&amp;extension=com_manifest2md" view="categories" img="media/com_manifest2md/images/s_extensions.png" alt="Manifest2md/Categories">COM_MANIFEST2MD_EXTENSIONS_CATEGORY</menu>

        </submenu>
        <files folder="administrator">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>manifest2md.php</filename>
            <folder>controllers</folder>
            <folder>assets</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>
        <languages folder="languages/administrator">
            
			<language tag="en-GB">en-GB/en-GB.com_manifest2md.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_manifest2md.sys.ini</language>
        </languages>
    </administration>
    <config>
        <fields name="params">
            <fieldset name="component">
                <field name="save_history" default="0" />
            </fieldset>
        </fields>
    </config>
    <plugins>
        <plugin group="search" plugin="manifest2md"/>
    </plugins>
    
</extension>
